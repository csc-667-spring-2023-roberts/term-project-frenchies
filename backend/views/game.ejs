<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Security-Policy" content="default-src 'self' script-src: 'self' 'unsafe-inline'">
    <style>
        body {
            margin: 0;
        }

        h1 {
            text-align: center;
        }

        .game-area {
            display: flex;
            justify-content: space-around;
            width: 80%;
            margin: auto;
        }

        .player-info, .game-board {
            border: 1px solid black;
            padding: 20px;
            width: 45%;
        }

        .current-player {
            color: red;
            font-weight: bold;
        }
    </style>



</head>
<body>
<script type="text/javascript" src="/helpers.root.js"></script>
<%- include('top-bar') %>
<h1>Game Room: <%= room.name %></h1>
<div class="game-area">
    <div class="player-info">
        <h2>Player Info</h2>

        <% for (let player of room.players) { %>
            <p class="<%= player.isPlaying ? 'current-player' : '' %>"><%= player.name %></p>
        <% } %>
    </div>
    <div class="game-board">
        <h2>Game Board</h2>
        <div id="<%= currentlyCard.id %>" class="card <%= currentlyCard.color %>">
            <p><%= currentlyCard.value %></p>
        </div>
    </div>
</div>
<h2>Your Cards</h2>

<div class="card-area">
    <% for (let card of playerCards) { %>
        <div id="<%= card.id %>" class="card <%= card.color %>" onclick="selectCard('<%= JSON.stringify(card) %>')">
            <p><%= card.value %></p>
        </div>
    <% } %>
</div>
<style>
    .card-area {
        overflow-x: auto;
        white-space: nowrap;
        display: flex;
        flex: 1;
        justify-content: center;
        align-items: center;
    }

    .card {
        display: inline-block;
        width: 100px;
        height: 100px;
        border: 10px solid black;
        padding: 10px;
        margin: 5px;
        cursor: pointer;
        text-align: center;
        box-sizing: border-box;
    }

    .card.red {
        border-color: red;
    }

    .card.blue {
        border-color: blue;
    }

    .card.yellow {
        border-color: yellow;
    }

    .card.green {
        border-color: green;
    }

    .card.wild {

        border-color: grey;
    }

    .card.selected {
        border-color: blue;
    }
</style>

<%- include('chat') %>

</body>
</html>
